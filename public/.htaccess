# /var/www/html/public/.htaccess

Require all granted
Options -Indexes
RewriteEngine On

# 1. Permitir acceso directo a archivos existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Permitir archivos PHP directamente
RewriteCond %{REQUEST_URI} \.php$ [NC]
RewriteRule ^ - [L]

# 3. Permitir rutas específicas
RewriteRule ^(views/|admin/|css/|js/|images/) - [L]

# 4. Redirigir todo lo demás a index.php
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]